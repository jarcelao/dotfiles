" general
let mapleader = " "
set mouse=a
set clipboard=unnamedplus
syntax enable

" display
set number
set relativenumber
set termguicolors
set statusline=%f\ %y\ %m\ %r\ %=\ %l:%c\ (%p%%)
set laststatus=2

" indentation
set expandtab
set shiftwidth=4
set tabstop=4
set softtabstop=4
set autoindent
set smartindent

" search
set incsearch
set hlsearch
set ignorecase
set smartcase
